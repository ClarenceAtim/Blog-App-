<h2 class="text-center my-10 font-semibold text-lg">Log in</h2>

<section class="form-section flex justify-center">
  <div class="form-container" style="width: 90%;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'border my-3 py-2 px-4 w-full' %>
      </div>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'border my-3 py-2 px-4 w-full' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <%= f.label :remember_me, class: 'text-sm text-gray-600' %>
        </div>
      <% end %>

      <div class="flex flex-col items-center mt-6">
        <%= f.submit "Log in", class: 'border px-6 py-2 rounded-md mb-4 w-full' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</section>
